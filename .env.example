# Example environment file for WjecDocumentScraper
# Copy this to .env and fill in any secret keys. Do NOT commit real secrets to git.

# Gemini (Google GenAI) API key
GEMINI_API_KEY=

# Mistral API key (optional / future provider)
MISTRAL_API_KEY=

# LLM provider ordering
LLM_PRIMARY=gemini
LLM_FALLBACK=mistral

# LLM categoriser settings (convert to integers via the application)
LLM_CATEGORISER_BATCH_SIZE=10
LLM_CATEGORISER_MAX_RETRIES=2
LLM_CATEGORISER_STATE_FILE=data/llm_categoriser_state.json
LLM_CATEGORISER_LOG_RESPONSES=true #Only set this to true if you want to record the raw response from the LLM.
LLM_FAIL_ON_QUOTA=true  # When set (true/1/yes/on) the categoriser will abort the run on provider quota exhaustion (default: true)

# Respect provider rate limits (Gemini)
GEMINI_MIN_REQUEST_INTERVAL=0  # Minimum seconds between Gemini API requests (0 = no delay)
GEMINI_MAX_RETRIES=0  # Number of retries for rate-limited requests (0 = no retries, fail immediately)
